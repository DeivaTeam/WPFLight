<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="{x:Type Window}"  TargetType="{x:Type Window}">
        <Style.Setters>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style.Setters>
    </Style>
    
   <Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
    	<Style.Setters>
    		<Setter Property="Alpha" Value="0.9"/>
        	<Setter Property="Background">
        		<Setter.Value>
	                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
	                    <LinearGradientBrush.GradientStops>
	                        <GradientStop Color="#FFD6D6D6" Offset="0.0" />
	                        <GradientStop Color="#FFB6B6B6" Offset="0.42" />
	                        <GradientStop Color="#FFA4A4A4" Offset="0.43" />
	                        <GradientStop Color="#FFCFCFCF" Offset="1.0" />
	                    </LinearGradientBrush.GradientStops>
	                </LinearGradientBrush>
        		</Setter.Value>
        	</Setter>
        	<Setter Property="Foreground" Value="Black" />
        	<Setter Property="FontSize" Value="0.32" />
        	<Setter Property="BorderBrush" Value="{x:Null}" />
        	<Setter Property="BorderThickness" Value="0"/>
        	<Setter Property="Margin" Value="3" />
        </Style.Setters>
        <Style.Triggers>
        	<Trigger Property="IsTouchDown" Value="True">
        		<Trigger.Setters>
        			<Setter Property="Alpha" Value="1"/>
        		</Trigger.Setters>
        	</Trigger>
        </Style.Triggers>
    </Style>
        
    <Style x:Key="{x:Type Button}" TargetType="{x:Type Button}">
    	<Style.Setters>
    		<Setter Property="Alpha" Value="0.9"/>
        	<Setter Property="Background">
        		<Setter.Value>
        		   <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
                 		<LinearGradientBrush.GradientStops>
				          <GradientStop Color="#FF505050" Offset="0.0" />
				          <GradientStop Color="#FF707070" Offset="0.42" />
				          <GradientStop Color="#FF606060" Offset="0.43" />
				          <GradientStop Color="#FF444444" Offset="1.0" />
                 		</LinearGradientBrush.GradientStops>
				    </LinearGradientBrush>
        		</Setter.Value>
        	</Setter>
        	<Setter Property="Foreground" Value="White" />
        	<Setter Property="FontSize" Value="0.37" />
        	<Setter Property="BorderBrush" Value="#88AAAAAA" />
        	<Setter Property="BorderThickness" Value="0"/>
        	<Setter Property="Margin" Value="3" />
        	<Setter Property="CornerRadiusX" Value="9" />
        	<Setter Property="CornerRadiusY" Value="9" />
        </Style.Setters>
        <Style.Triggers>
        	<Trigger Property="IsTouchDown" Value="True">
        		<Trigger.Setters>
        			<Setter Property="Alpha" Value="1.0"/>
        		</Trigger.Setters>
        	</Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="{x:Type ListBox}" TargetType="{x:Type ListBox}">
    <Style.Setters>
      <Setter Property="Alpha" Value="1.0"/>
      <Setter Property="Background" Value="#05FFFFFF" />
      <Setter Property="FontSize" Value="0.39" />
      <Setter Property="BorderBrush" Value="#55FFFFFF" />
      <Setter Property="BorderThickness" Value="1"/>
    </Style.Setters>
  </Style>

  <Style x:Key="{x:Type ListBoxItem}" TargetType="{x:Type ListBoxItem}">
    <Style.Setters>
      <Setter Property="Alpha" Value="0.9"/>
      <Setter Property="Background" Value="#17FFFFFF" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontSize" Value="0.39" />
      <Setter Property="BorderBrush" Value="#88AAAAAA" />
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Margin" Value="3,3,3,0" />
      <Setter Property="CornerRadiusX" Value="0" />
      <Setter Property="CornerRadiusY" Value="0" />
    </Style.Setters>
    <Style.Triggers>
      <Trigger Property="IsTouchDown" Value="True">
        <Trigger.Setters>
          <Setter Property="Alpha" Value="1.0"/>
        </Trigger.Setters>
      </Trigger>
      <Trigger Property="IsChecked" Value="True">
        <Trigger.Setters>
      		<Setter Property="Background" Value="CornflowerBlue" />
        </Trigger.Setters>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="{x:Type ToggleButton}" TargetType="{x:Type ToggleButton}">
    	<Style.Setters>
    		<Setter Property="Alpha" Value="0.9"/>
        	<Setter Property="Background">
        		<Setter.Value>
        		   <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
                 		<LinearGradientBrush.GradientStops>
				          <GradientStop Color="#FF505050" Offset="0.0" />
				          <GradientStop Color="#FF707070" Offset="0.42" />
				          <GradientStop Color="#FF606060" Offset="0.43" />
				          <GradientStop Color="#FF444444" Offset="1.0" />
                 		</LinearGradientBrush.GradientStops>
				    </LinearGradientBrush>
        		</Setter.Value>
        	</Setter>
        	<Setter Property="Foreground" Value="White" />
        	<Setter Property="FontSize" Value="0.37" />
        	<Setter Property="BorderBrush" Value="#88AAAAAA" />
        	<Setter Property="BorderThickness" Value="0"/>
        	<Setter Property="Margin" Value="3" />
        	<Setter Property="CornerRadiusX" Value="9" />
        	<Setter Property="CornerRadiusY" Value="9" />
        </Style.Setters>
        <Style.Triggers>
        	<Trigger Property="IsTouchDown" Value="True">
        		<Trigger.Setters>
        			<Setter Property="Alpha" Value="1"/>
        		</Trigger.Setters>
        	</Trigger>
        	<Trigger Property="IsChecked" Value="True">
        		<Trigger.Setters>
		        	<Setter Property="Background">
		        		<Setter.Value>
		        		   <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
		                 		<LinearGradientBrush.GradientStops>
						          <GradientStop Color="#FF606060" Offset="0.0" />
						          <GradientStop Color="#FF808080" Offset="0.42" />
						          <GradientStop Color="#FF707070" Offset="0.43" />
						          <GradientStop Color="#FF555555" Offset="1.0" />
		                 		</LinearGradientBrush.GradientStops>
						    </LinearGradientBrush>
		        		</Setter.Value>
		        	</Setter>
        		</Trigger.Setters>
        	</Trigger>
        </Style.Triggers>
    </Style>
        
